<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ucrop_photobox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ucrop_tacita_bg"
        android:gravity="center_vertical"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentInsetStartWithNavigation="0dp"
        app:popupTheme="@style/ucrop_AppTheme.PopupOverlay">

        <TextView
            android:id="@+id/toolbar_title"
            fontPath="fonts/test.ttf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/ucrop_label_edit_photo"
            android:textColor="@color/ucrop_textColorPrimary"
            android:textSize="@dimen/ucrop_textSize40"
            tools:ignore="MissingPrefix" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/ucrop_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/wrapper_controls"
        android:layout_below="@+id/toolbar"
        android:background="@color/ucrop_color_crop_background">

        <ImageView
            android:id="@+id/image_view_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ucrop_vector_ic_crop"
            tools:background="@drawable/ucrop_vector_ic_crop"
            tools:ignore="MissingPrefix" />

        <com.yalantis.ucrop.view.UCropView
            android:id="@+id/ucrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ucrop_TextInputLayout"
            android:alpha="0">

        </com.yalantis.ucrop.view.UCropView>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ucrop_TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:hint="@string/ucrop_add_a_caption"
            android:theme="@style/ucrop_EditTextHint"
            android:layout_toLeftOf="@+id/ucrop_imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <EditText
                android:id="@+id/ucrop_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColor="@color/ucrop_textColorWhite" />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ucrop_send"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/ucrop_imageView"
            android:layout_below="@+id/ucrop"
            android:scaleType="fitCenter"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:maxWidth="40dp"
            android:maxHeight="40dp"
            android:layout_width="30dp"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>
